<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.hhuc.mapper.ITripVolume">
    <select id="getAreaTripVolumes" resultType="cn.hhuc.bean.TripVolume">
        select area,count(*) as `value` from stayinfo group by area order by count(*) desc;
    </select>

    <select id="getAreaTripVolumeByArea" parameterType="java.lang.String" resultType="cn.hhuc.bean.TripVolume">
        select area,count(*) as `value` from stayinfo where area=#{area};
    </select>

</mapper>
